<script>
  import gsap from "gsap";

  const cramunha = document.querySelector<SVGSVGElement>("#cramunha")!;
  cramunha.style.display = "initial";

  // Fundo girante
  const starburst = document.querySelector<SVGSVGElement>(
    "#cramunha-starburst"
  )!;
  gsap.from(starburst, { duration: 1.8, scale: 0, ease: "power3.out" });

  // Rosto
  const face = document.querySelector<SVGGElement>("#cramunha-face")!;

  gsap.set(face, { x: 0, y: 0 });

  const pos = {
    x: cramunha.getBoundingClientRect().width / 2,
    y: cramunha.getBoundingClientRect().height / 2,
  };

  const faceXTo = gsap.quickTo(face, "x", {
    duration: 1.4,
    ease: "elastic(1.3, 0.5)",
  });
  const faceYTo = gsap.quickTo(face, "y", {
    duration: 1.8,
    ease: "elastic(1.3, 0.5)",
  });

  // Corpo
  const body = document.querySelector<SVGGElement>("#cramunha-body")!;

  const bodyXTo = gsap.quickTo(body, "x", {
    duration: 1.4,
    ease: "power3",
  });
  const bodyYTo = gsap.quickTo(body, "y", {
    duration: 1.8,
    ease: "power3",
  });

  cramunha.addEventListener("mousemove", (e) => {
    faceXTo((e.offsetX - pos.x) / 10);
    faceYTo((e.offsetY - pos.y) / 10);

    bodyXTo((e.offsetX - pos.x) / -15);
    bodyYTo((e.offsetY - pos.y) / -15);
  });

  cramunha.addEventListener("mouseleave", (e) => {
    faceXTo(0);
    faceYTo(0);

    bodyXTo(0);
    bodyYTo(0);
  });
</script>

